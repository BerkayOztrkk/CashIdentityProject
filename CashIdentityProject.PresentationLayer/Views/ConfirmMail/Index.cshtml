@model ConfirmMailViewModel
@{
    Layout = null;
}
<link href="\lib\bootstrap\dist\css\bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
<form method="post">
    <h2>Email Adress:@ViewBag.v</h2>
        <label>ID</label>
        <br />
        <input type="text" class="form-control" asp-for="Mail" value="@ViewBag.v" />
        <br />
    <label>Enter your confirm code please</label>
    <br />
    <input type="text" class="form-control"asp-for="ConfirmCode" />
    <br />
    <button class="btn btn-primary">Send</button>

</form>
</div>